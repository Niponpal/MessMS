@model IEnumerable<Mess_Manager.Models.Expense>

@{
    ViewData["Title"] = "Expense List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-cash-stack me-2"></i>Expense Management
        </h2>
        <a asp-action="CreateOrEdit" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Expense
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-info-circle me-2"></i>No expenses found. Add a new one!
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>Expense Name</th>
                        <th>Amount (৳)</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var expense in Model)
                    {
                        <tr>
                            <td class="text-center">@count</td>
                            <td>@expense.ExpenseName</td>
                            <td class="text-end">@expense.Amount.ToString("N2")</td>
                            <td class="text-center">@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                            <td>@expense.Description</td>
                            <td class="text-center">
                                <div class="d-flex" >
                                    <a asp-action="Details" asp-route-id="@expense.Id" class="btn btn-outline-info btn-sm me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="CreateOrEdit" asp-route-id="@expense.Id" class="btn btn-outline-primary btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form class="m-1" method="post" asp-action="Delete" asp-route-id="@expense.Id" onclick="return confirm('Are You Sure Delete this Data')">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    }
</div>
