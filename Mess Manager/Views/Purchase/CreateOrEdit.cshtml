@model Mess_Manager.Models.Purchase


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #00c6ff, #007bff);">
                    <h4 class="mb-0 text-center fw-semibold">
                        <i class="bi bi-bag-plus-fill me-2"></i> Add New Purchase
                    </h4>
                </div>

                <div class="card-body px-4 py-4">
                    <form asp-action="CreateOrEdit" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="PurchaseDate" class="form-control" type="date" placeholder="Select Purchase Date" />
                            <label asp-for="PurchaseDate">Purchase Date</label>
                            <span asp-validation-for="PurchaseDate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="SupplierId" class="form-select" asp-items="ViewBag.SupplierList">
                                <option value="">-- Select Supplier --</option>
                            </select>
                            <label asp-for="SupplierId">Supplier</label>
                            <span asp-validation-for="SupplierId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="ItemId" class="form-select" asp-items="ViewBag.InventoryList">
                                <option value="">-- Select Item --</option>
                            </select>
                            <label asp-for="ItemId">Item</label>
                            <span asp-validation-for="ItemId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Quantity" class="form-control" type="number" step="1" placeholder="Enter Quantity" />
                            <label asp-for="Quantity">Quantity</label>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter Price" />
                            <label asp-for="Price">Price</label>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save2-fill me-1"></i> Save Purchase
                            </button>
                        </div>

                    </form>
                </div>
            </div>

            <p class="text-muted text-center mt-3 small">
                © @DateTime.Now.Year - Mess Manager System
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
