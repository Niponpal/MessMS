@model IEnumerable<Mess_Manager.Models.Purchase>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">DataTable with Attendance</h3>
        <a asp-action="CreateOrEdit" class="btn btn-primary ">
            <i class="bi bi-plus-circle"></i> Create New Attendance
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Supplier Name</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price (৳)</th>
                    <th>Purchase Date</th>
                    <th>Total (৳)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Supplier?.SupplierName</td>
                        <td>@item.Inventory?.ItemName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("0.00")</td>
                        <td>@item.PurchaseDate.ToString("dd-MMM-yyyy")</td>
                        <td>@((item.Quantity * item.Price).ToString("0.00"))</td>
                        <!-- Actions -->
                        <td class="text-center">

                            <div class="d-flex flex-wrap justify-content-center gap-1">

                                <!-- Edit Button -->
                                <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- Delete Button -->
                                <form method="post" asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this record?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>

                                <!-- Details Button -->
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>

                            </div>
                        </td>

                    </tr>
                }


            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Supplier Name</th>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price (৳)</th>
                    <th>Purchase Date</th>
                    <th>Total (৳)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
