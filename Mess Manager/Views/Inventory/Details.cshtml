@model Mess_Manager.Models.Inventory

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 text-center rounded-top">
            <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>Inventory Details</h4>
        </div>

        <div class="card-body px-5 py-4">

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-secondary fw-semibold">Item Name</h6>
                    <p class="fs-6">@Model.ItemName</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-secondary fw-semibold">Quantity</h6>
                    <p class="fs-6">@Model.Quantity @Model.Unit</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <h6 class="text-secondary fw-semibold">Purchase Date</h6>
                    <p class="fs-6">@Model.PurchaseDate.ToString("dd MMM yyyy")</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-secondary fw-semibold">Expiry Date</h6>
                    @{
                        if (Model.ExpiryDate < DateTime.Now)
                        {
                            <span class="badge bg-danger px-3 py-2 fs-6">Expired on @Model.ExpiryDate.ToString("dd MMM yyyy")</span>
                            ;
                        }
                        else
                        {
                            <span class="badge bg-success px-3 py-2 fs-6">Valid till @Model.ExpiryDate.ToString("dd MMM yyyy")</span>
                            ;
                        }
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-12">
                    <h6 class="text-secondary fw-semibold">Purchase Records</h6>
                    @if (Model.Purchases != null && Model.Purchases.Any())
                    {
                        <ul class="list-group shadow-sm">
                            @foreach (var purchase in Model.Purchases)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-basket2 me-2 text-primary"></i>@purchase.PurchaseDate.ToString("dd MMM yyyy")</span>
                             
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">No purchase records available.</p>
                    }
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white px-4 me-2">
                        <i class="bi bi-pencil-square me-2"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger px-4">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>

        <div class="card-footer text-muted text-center small">
            <i class="bi bi-calendar2-week me-1"></i>Generated on @DateTime.Now.ToString("dd MMM yyyy, hh:mm tt")
        </div>
    </div>
</div>
