@model Mess_Manager.Models.Staff

@{
    ViewData["Title"] = "Add New Staff";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #00c6ff, #007bff);">
                    <h4 class="mb-0 text-center fw-semibold">
                        <i class="bi bi-people-fill me-2"></i> Add New Staff
                    </h4>
                </div>

                <div class="card-body px-4 py-4">
                    <form asp-action="CreateOrEdit" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="Role" class="form-select">
                                <option value="">-- Select Role --</option>
                                <option>Cook</option>
                                <option>Cleaner</option>
                                <option>Helper</option>
                            </select>
                            <label asp-for="Role">Role</label>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Enter salary" />
                            <label asp-for="Salary">Salary</label>
                            <span asp-validation-for="Salary" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="JoiningDate" class="form-control" type="date" />
                            <label asp-for="JoiningDate">Joining Date</label>
                            <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save2-fill me-1"></i> Save Staff
                            </button>
                        </div>

                    </form>
                </div>
            </div>

            <p class="text-muted text-center mt-3 small">
                © @DateTime.Now.Year - Mess Manager System
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
