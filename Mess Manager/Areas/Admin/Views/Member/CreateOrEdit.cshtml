@model Mess_Manager.Models.Member

@{
    ViewData["Title"] = "Add New Member";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #00c6ff, #007bff);">
                    <h4 class="mb-0 text-center fw-semibold">
                        <i class="bi bi-person-plus-fill me-2"></i> Add New Member
                    </h4>
                </div>

                <div class="card-body px-4 py-4">
                    <form asp-action="CreateOrEdit" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Enter member name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter email" />
                            <label asp-for="Email">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Address" class="form-control" placeholder="Enter address" />
                            <label asp-for="Address">Address</label>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="JoiningDate" class="form-control" type="date" />
                            <label asp-for="JoiningDate">Joining Date</label>
                            <span asp-validation-for="JoiningDate" class="text-danger small"></span>
                        </div>

                        <div class="form-check form-switch mb-4 ps-2">
                            <input asp-for="Status" class="form-check-input" type="checkbox" role="switch" id="statusSwitch" />
                            <label class="form-check-label fw-semibold" for="statusSwitch">Active Status</label>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-person-check-fill me-1"></i> Save Member
                            </button>
                        </div>

                    </form>
                </div>
            </div>

            <p class="text-muted text-center mt-3 small">
                © @DateTime.Now.Year - Mess Manager System
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
