@model Mess_Manager.Models.Meal

@{
    ViewData["Title"] = "Add New Meal";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #007bff, #00c6ff);">
                    <h4 class="mb-0 text-center fw-semibold">
                        <i class="bi bi-egg-fried me-2"></i> Add New Meal
                    </h4>
                </div>

                <div class="card-body px-4 py-4">
                    <form asp-action="CreateOrEdit" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="MealDate" class="form-control" type="date" placeholder="Select Meal Date" />
                            <label asp-for="MealDate">Meal Date</label>
                            <span asp-validation-for="MealDate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="MealType" class="form-select" aria-label="Select Meal Type">
                                <option value="">-- Choose Meal Type --</option>
                                <option>Breakfast</option>
                                <option>Lunch</option>
                                <option>Dinner</option>
                            </select>
                            <label asp-for="MealType">Meal Type</label>
                            <span asp-validation-for="MealType" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Quantity" class="form-control" type="number" step="0.1" placeholder="Enter Quantity" />
                            <label asp-for="Quantity">Quantity</label>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberList">
                                <option value="">-- Select Member --</option>
                            </select>
                            <label asp-for="MemberId">Member Name</label>
                            <span asp-validation-for="MemberId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save2-fill me-1"></i> Save Meal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-muted text-center mt-3 small">
                © @DateTime.Now.Year - Mess Manager System
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
